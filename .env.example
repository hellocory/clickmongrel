# ClickMongrel Environment Variables
# Copy this file to .env and fill in your values

# REQUIRED: Your ClickUp API key
# Get from: ClickUp Settings → Apps → API Token
CLICKUP_API_KEY=pk_your_api_key_here

# OPTIONAL: Default workspace and space IDs
# These can be found in ClickUp URLs or via the API
CLICKUP_WORKSPACE_ID=
CLICKUP_SPACE_ID=
CLICKUP_TASKS_LIST_ID=
CLICKUP_COMMITS_LIST_ID=

# OPTIONAL: Logging configuration
LOG_LEVEL=info  # debug|info|warn|error

# OPTIONAL: MCP server configuration
MCP_TIMEOUT=120000  # Timeout in milliseconds